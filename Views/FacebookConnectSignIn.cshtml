﻿@using Orchard.ContentManagement;

@{
    Script.Require("Jquery");
    Script.Include("http://connect.facebook.net/en_US/all.js");    
    var settings = WorkContext.CurrentSite.As<NGM.OpenAuthentication.Models.OpenAuthenticationSettingsPart>().Record; }

<script type="text/javascript">
    FB.init({
        appId: settings.FacebookClientIdentifier, cookie: true,
        status: true, xfbml: true
    });
</script>
<fb:login-button>Login with Facebook</fb:login-button>